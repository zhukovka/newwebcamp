<div class="wc_slider show-for-medium" main-slider>
    <div class="slider__content clearfix">
        <ul class="slides">
            {% for item in slides %}
                <li class="slide {% if loop.first %}active{% endif %}" style="background-image: url({{ item.img }})">
                    <div class="gradient">
                        <div class="grid">
                            <div class="slide__content grid__left w_m-70 w_l-50">
                                <h3>{{ item.title }}</h3>

                                <p>{{ item.description }}</p>
                                <a href="/{{ item.alias }}" class="btn-more">Подробнее</a>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="slider__controls grid">
        <ul class="slide-controls">
            {% for item in slides %}
                <li class="slide-controls__item {% if loop.first %}active{% endif %}" data-index="{{ loop.index0 }}"
                    style="width: {{ 100 / loop.length }}%">
                    <a class="slide-control" href="/{{ item.alias }}">
                        <span class="slide-control__icon">
                            {{ item.icon_img|raw }}
                        </span>
                        <span class="slide-control__name">
                            {{ item.name }}
                        </span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>